  <section class="bg-gray-50 flex justify-center items-center py-20 lg:py-12">
    <div class="flex flex-wrap justify-center items-center max-w-5xl">
      <h3 class="text-lg lg:text-2xl font-thin text-center text-gray-800" set:html={landingData.providerFor.title} />
      <div class="flex flex-wrap gap-14 justify-center items-center mt-8">
        {landingData.providerFor.logos.map((logo) => (
          <a href={logo.link} target="_blank" class="hover:scale-110 transition-transform">
            <ImageComp imagePath={logo.imagePath} imageAlt={logo.imageAlt} styles="max-w-56 max-h-28 object-contain" />
          </a>
        ))}
      </div>
    </div>
  </section>
  <LogoCloudRight data={landingData.partners} />
