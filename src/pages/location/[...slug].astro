        image: "/penn-air-logo-250.webp",
        telephone: PHONE_NUMBER,
        email: EMAIL_ADDRESS,
        url: canonical,
        address: {
          "@type": "PostalAddress",
          streetAddress: ADDRESS_LINE_1,
          addressLocality: "Pottstown",
          addressRegion: "PA",
          postalCode: "19464",
          addressCountry: "US",
        },
        geo: {
          "@type": "GeoCoordinates",
