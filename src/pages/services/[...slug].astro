---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Content from "../../components/Content.astro";
import Hero2 from "../../components/Hero2.astro";
import Breadcrumbs from "../../components/Breadcrumbs.astro";
import ServiceSchema from "../../components/ServiceSchema.astro";
import services from "../../data/services";
export function getStaticPaths() {
  return services.map((service) => {
    return {
      params: { slug: service.slug },
      props: {
        service,
      },
    };
  });
}

const { service } = Astro.props;

// Breadcrumb data
const breadcrumbs = [
  { name: "Home", href: "/" },
  { name: "Services", href: "/services" },
  { name: service.name, href: service.link },
];

// Service schema data
const serviceSchemaData = {
  name: service.name,
  description: service.siteDescription,
  url: `https://pennairrepair.com${service.link}`,
  category: "Aircraft Maintenance Services",
};
---

<BaseLayout
  title={service.siteTitle}
  description={service.siteDescription}
  keywords={service.siteKeywords}
>
  <ServiceSchema service={serviceSchemaData} />
  <Hero2 data={service.hero} />
  <div class="bg-white py-4">
    <div class="container mx-auto px-4">
      <Breadcrumbs items={breadcrumbs} />
    </div>
  </div>
  <Content data={service.content} />
</BaseLayout>
