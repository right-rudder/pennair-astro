---
import "../styles/global.css";

interface Props {
  title: string;
  description: string;
  keywords: string;
  image?: string;
  canonical?: string;
}

const defaultCanonicalURL = new URL(Astro.url, Astro.site).toString();

const {
  title,
  description,
  keywords,
  image,
  canonical = defaultCanonicalURL,
} = Astro.props;
