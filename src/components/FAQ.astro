---
interface FAQItem {
  question: string;
  answer: string;
}

interface Props {
  items: FAQItem[];
  title?: string;
  className?: string;
}

const {
  items,
  title = "Frequently Asked Questions",
  className = "",
} = Astro.props;

// Generate FAQ schema.org markup
const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  mainEntity: items.map((item) => ({
    "@type": "Question",
    name: item.question,
    acceptedAnswer: {
      "@type": "Answer",
      text: item.answer,
    },
  })),
};
---

<!-- FAQ Schema -->
<script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />

<!-- FAQ Component -->
<section class={`py-16 bg-gray-50 ${className}`}>
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto">
      <h2
        class="text-3xl md:text-4xl font-bold text-center text-gray-900 mb-12"
      >
        {title}
      </h2>

      <div class="space-y-4">
        {
          items.map((item, index) => (
            <details class="group bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
              <summary class="flex justify-between items-center cursor-pointer p-6 hover:bg-gray-50 transition-colors duration-200">
                <h3 class="text-lg font-semibold text-gray-900 pr-4">
                  {item.question}
                </h3>
                <svg
                  class="w-5 h-5 text-gray-500 group-open:rotate-180 transition-transform duration-200"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M19 9l-7 7-7-7"
                  />
                </svg>
              </summary>
              <div class="px-6 pb-6">
                <div
                  class="text-gray-700 leading-relaxed"
                  set:html={item.answer}
                />
              </div>
            </details>
          ))
        }
      </div>
    </div>
  </div>
</section>

<style>
  details > summary {
    list-style: none;
  }

  details > summary::-webkit-details-marker {
    display: none;
  }
</style>
